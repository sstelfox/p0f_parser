{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "properties": {
    "addresses": {
      "items": {
        "properties": {
          "address": {
            "oneOf": [
              { "format": "ip-address", "type":"string" },
              { "format": "ipv6", "type":"string" },
              { "pattern": "^([0-9a-f]{2}[:-]){5}[0-9a-f]{2}$", "type":"string" }
            ]
          },
          "hostnames": {
            "type":"array",
            "items": {
              "format": "host-name",
              "type": "string"
            }
          },
          "type": {
            "enum": [ "ipv4", "ipv6", "mac" ],
            "type":"string"
          }
        },
        "required": [ "address", "type" ],
        "type": "object"
      },
      "type": "array",
      "uniqueItems": true
    },
    "metadata": { "type": "object" },
    "id": {
      "description": "A unique identifier for an individual host.",
      "type": "number"
    },
    "seen_by": {
      "properties": {
        "items": {
          "properties": {
            "first_seen": {
              "format": "date-time",
              "type": "string"
            },
            "last_seen": {
              "format": "date-time",
              "type": "string"
            },
            "scanner": { "type": "string" },
            "scan_host": {
              "pattern": "^[a-f0-9]{8}-([a-f0-9]{4}-){3}[a-f0-9]{12}$",
              "type": "string"
            }
          },
          "required": [ "first_seen", "last_seen", "scanner", "scan_host" ],
          "type": "object"
        }
      },
      "type": "array"
    },
    "services": {
      "items": {
        "properties": {
          "metadata": { "type": "object" },
          "port": { "type": "number" },
          "protocol": { "type": "string" },
          "status": {
            "type": "string",
            "enum": [ "filtered", "open", "closed" ]
          },
          "vulnerabilities": {
            "type": "array",
            "items": {
              "vulnerability": {
                "properties": {
                  "cve": { "type": "string" },
                  "cvss": {
                    "properties": {
                      "base_score": { "type": "number" },
                      "exploitability": { "type": "number" },
                      "impact": { "type": "number" },
                      "link": { "type": "string", "format": "uri" },
                      "vectors": { "type": "string" }
                    },
                    "type": "object",
                    "required": [ "base_score", "exploitability", "impact", "link", "vectors" ]
                  },
                  "exploitdb": { "type": "number" },
                  "metasploit_module": { "type": "string" }
                },
                "type": "object"
              }
            }
          }
        },
        "type": "object",
        "required": []
      },
      "type": "array",
      "uniqueItems": true
    },
    "type": {
      "type": "string",
      "enum": [ "host" ]
    }
  },
  "required": [ "id", "type" ],
  "type": "object"
}
