{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "host": {
      "id": "host",
      "properties": {
        "addresses": {
          "items": {
            "oneOf": [
              { "$ref": "#ipv4Address" },
              { "$ref": "#ipv6Address" },
              { "$ref": "#macAddress" }
            ]
          },
          "type": "array",
          "uniqueItems": true
        },
        "metadata": { "type": "object" },
        "id": {
          "description": "A unique identifier for identifying an individual host.",
          "type": "number"
        },
        "seen_by": { "$ref": "#scanner" },
        "services": {
          "items": { "$ref": "#service" },
          "type": "array",
          "uniqueItems": true
        },
        "type": {
          "type": "string",
          "enum": [ "host" ]
        }
      },
      "required": [ "id", "type" ],
      "type": "object"
    },
    "hostname": {
      "id": "hostname",
      "format": "host-name",
      "type": "string"
    },
    "ipv4Address": {
      "id": "ipv4Address",
      "properties": {
        "address": {
          "format": "ip-address",
          "type":"string"
        },
        "hostnames": {
          "type":"array",
          "items": { "$ref": "hostname" }
        },
        "type": {
          "enum": [ "ipv4" ],
          "type":"string"
        }
      },
      "required": [ "address", "hostnames", "type" ],
      "type": "object"
    },
    "ipv6Address": {
      "id": "ipv6Address",
      "properties": {
        "address": {
          "format": "ipv6",
          "type":"string"
        },
        "hostnames": {
          "type":"array",
          "items": { "$ref": "hostname" }
        },
        "type": {
          "enum": [ "ipv6" ],
          "type":"string"
        }
      },
      "required": [ "address", "hostnames", "type" ],
      "type": "object"
    },
    "macAddress": {
      "id": "macAddress",
      "properties": {
        "address": {
          "pattern": "^([0-9a-f]{2}[:-]){5}[0-9a-f]{2}$",
          "type":"string"
        },
        "type": {
          "enum": [ "mac" ],
          "type":"string"
        }
      },
      "required": [ "address", "type" ],
      "type": "object"
    },
    "scanner": {
      "id": "scanner",
      "properties": {
        "first_seen": {
          "format": "date-time",
          "type": "string"
        },
        "last_seen": {
          "format": "date-time",
          "type": "string"
        },
        "scanner": {
          "type": "string"
        },
        "scan_host": {
          "pattern": "^[a-f0-9]{8}-([a-f0-9]{4}-){3}[a-f0-9]{12}$",
          "type": "string"
        }
      },
      "required": [ "first_seen", "last_seen", "scanner", "scan_host" ],
      "type": "object"
    },
    "service": {
      "id": "service",
      "properties": {
        "metadata": {
          "type": "object"
        },
        "port": {
          "type": "number"
        },
        "protocol": {
          "type": "string",
          "enum": [ "tcp", "udp", "icmp", "sctp" ]
        },
        "status": {
          "type": "string",
          "enum": [ "filtered", "open", "closed" ]
        },
        "vulnerabilities": {
          "type": "array",
          "items": { "$ref": "vulnerability" }
        }
      },
      "type": "object",
      "required": []
    },
    "cvss": {
      "id": "cvss",
      "properties": {
        "base_score": { "type": "number" },
        "exploitability": { "type": "number" },
        "impact": { "type": "number" },
        "link": { "type": "string", "format": "uri" },
        "vectors": { "type": "string" }
      },
      "type": "object",
      "required": [ "base_score", "exploitability", "impact", "link", "vectors" ]
    },
    "vulnerability": {
      "id": "vulnerability",
      "properties": {
        "cve": { "type": "string" },
        "cvss": { "$ref": "cvss" },
        "exploitdb": { "type": "number" },
        "metasploit_module": { "type": "string" }
      },
      "type": "object",
      "required": []
    }
  }
}
